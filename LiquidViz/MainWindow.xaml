<Window x:Class="LiquidViz.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LiquidViz" 
        d:DataContext="{d:DesignInstance Type=local:MainViewModel}"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="700">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <WrapPanel>
            <Button Command="{Binding GridViz.ResetCommand}">Reset</Button>
            <Button Command="{Binding GridViz.StepCommand}">Step</Button>
            <Button Command="{Binding GridViz.StartCommand}">Start</Button>
            <Button Command="{Binding GridViz.StopCommand}">Stop</Button>

            <StackPanel>
                <Label>Ext force X</Label>
                <Slider Value="{Binding GridViz.ExternalForceX}" Minimum="-2" Maximum="2" 
                        Width="100" />
                <TextBox Text="{Binding GridViz.ExternalForceX, Mode=OneWay}" />
            </StackPanel>

            <StackPanel>
                <Label>Ext force Y</Label>
                <Slider Value="{Binding GridViz.ExternalForceY}" Minimum="-2" Maximum="2"
                        Width="100" />
                <TextBox Text="{Binding GridViz.ExternalForceY, Mode=OneWay}" />
            </StackPanel>

            <StackPanel>
                <Label>Viscosity</Label>
                <Slider Value="{Binding GridViz.LogViscosity}" Minimum="-1" Maximum="5"
                        Width="100" />
                <TextBox Text="{Binding GridViz.Viscosity, Mode=OneWay}" />
            </StackPanel>

            <StackPanel>
                <Label>Time step</Label>
                <Slider Value="{Binding GridViz.LogTimeStep}" Minimum="-4" Maximum="-1"
                        Width="100" />
                <TextBox Text="{Binding GridViz.TimeStep, Mode=OneWay}" />
            </StackPanel>
        </WrapPanel>
        
        <local:GridVizView Grid.Row="1" DataContext="{Binding GridViz}" HorizontalAlignment="Center" VerticalAlignment="Center" />

        <WrapPanel Grid.Row="2">
            <Label Content="Total volume" />
            <TextBox IsReadOnly="True" Text="{Binding GridViz.TotalVolume, Mode=OneWay}" />
            <Label Content="Pos div error" />
            <TextBox IsReadOnly="True" Text="{Binding GridViz.PositiveDivError, Mode=OneWay}" />
            <Label Content="Neg div error" />
            <TextBox IsReadOnly="True" Text="{Binding GridViz.NegativeDivError, Mode=OneWay}" />
            <Label Content="Tick processing duration (ms)" />
            <TextBox IsReadOnly="True" Text="{Binding GridViz.TickProcessingDuration, Mode=OneWay}" />
        </WrapPanel>
    </Grid>
</Window>
