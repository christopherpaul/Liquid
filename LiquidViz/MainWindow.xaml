<Window x:Class="LiquidViz.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LiquidViz" 
        d:DataContext="{d:DesignInstance Type=local:MainViewModel}"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <WrapPanel>
            <Button Command="{Binding GridViz.ResetCommand}">Reset</Button>
            <Button Command="{Binding GridViz.ZeroDivCommand}">Enforce div(u)=0</Button>
            <Button Command="{Binding GridViz.VolumeAdvectionCommand}">Volume advection</Button>
        </WrapPanel>
        
        <local:GridVizView Grid.Row="1" DataContext="{Binding GridViz}" />
    </Grid>
</Window>
